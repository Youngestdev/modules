module fulltick.painting

FColor = new fulltick.painting.FColor

BLACK = 56
RED = 88
GREEN = 63

class FColor

	block BLACK()
		return BLACK
		
	block RED()
		return RED
		
	block GREEN()
		return GREEN
		
	block getColor()
		return FCOLOR
		
	block setRGB(r, g, b)
		if (r == 0 && g == 0 && b == 0 ) 
			return BLACK;
		else 
			FCOLOR = (((((r << 24) | g) << 16) | b) << 8)
		end
		
	private 
		FCOLOR = BLACK