module simple.internet.curl

call "CurlCore.sim"

class CurlHTTP : CurlCore

	/* LIST */
	CURL_HEADER = [] #create the container list for all header
	
	block CurlHTTP(url)
		initCurl(url) 

	block addHeader(header)
		/*if isList()
			
		else 
		
		end*/
		try 
			a = 23 + "" + header
			for a = 0 to lengthOf(header)
				add(CURL_HEADER, header[a])
			end
		catch 
			add(CURL_HEADER, header)
		end
		
	block prepare()
		addOption(option, CURL_HEADER)
		
	private 
		
		
		
		
		