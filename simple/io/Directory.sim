module simple.io

call "Path.sim"
call "File.sim"

class Directory

	block Directory(path)
		if isPath(path)
			directoryPath = path.toString()
		else 
			directoryPath = path
		end
		directoryPath = curePathSlashes(directoryPath)
		
	block explode()
		return blow_dir(directoryPath)
		
	block listFiles()
		for a in explode()
			if !a[2]
				add(filesList, a[1])
			end
		end
		return filesList
	
	private
		directoryPath = ""
		filesList = []
		folderList = []