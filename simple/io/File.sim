module simple.io

call "Path.sim"

class File 	

	block File(path)
		if isPath(path)
			filePath = path.toString()
		else 
			filePath = path
		end
		
	block getAbsolutePath()
		return "adewale"
		
	block readFileAsString()
		return readfile(filePath)
		
	private
		filePath = "(null)"
		
		
	