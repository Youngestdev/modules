module web.front.elements

call "web/style/StyleAttributes.sim" call "web/style/StyleColor.sim" ? web.style

class Element

	elementName = "element"
	elementHead = '<element '
	elementStyle = 'style="'
	elementHeight = ""
	elementWidth = ""
	elementScript = "<script> "
	elementContent = ""
	styleClass = 'class="'
	elementId = ""
	inline = false
	
	block init(name)
		elementName = name
		elementHead = '<'+elementName+' '
	
	block addHTML(inelement)
		elementContent += "\n\t\t"+inelement + crlf
		
	block add(element)
		try 
			elementContent += "\n\t\t"+element.toString() + crlf
		catch
			for a = 0 to lengthOf(element)
				elementContent += "\n\t\t"+element[a].toString() + crlf
			end
		end
		
	
	block setPostion(pos)
		elementStyle += 'position:'+pos+';'
		
	block setBottom(px)
		elementStyle += 'bottom:'+px+';'
		
	block setTop(px)
		elementStyle += 'top:'+px+';'
		
	block setLeft(px)
		elementStyle += 'left:'+px+';'
		
	block setRight(px)
		elementStyle += 'right:'+px+';'
	
	block setBackground(icolor)
		elementStyle += 'background:'+icolor+';'
		
	block setTextColor(icolor)
		elementStyle += 'color:'+icolor+';'
		
	block setHeight(height)
		setSize(height, elementWidth)
		
	block getHeight()
		return elementHeight
	
	block setWidth(width)
		setSize(elementHeight, width)
		
	block getWidth()
		return elementWidth
		
	block addStyleClass(iStyleClass)
		styleClass += ' '+iStyleClass
		
	block setStyleClass(iStyleClass)
		styleClass += iStyleClass
		
	block setId(id)
		elementId += ' id="'+id+'" '
		
	block setInline(con)
		inline = con
		
	block toString()
		finalDiv = '\t\t'+elementHead + elementStyle+'" '+elementId+' '+styleClass+'" > '+elementContent
		if inline 
			finalDiv += '</'+elementName+'>' 
		else 
			finalDiv += '
		\t</'+elementName+'>'
		end
		
		return finalDiv