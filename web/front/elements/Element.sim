module web.front.elements

call "web/style/StyleAttributes.sim" call "web/style/StyleColor.sim" ? web.style

class Element

	elementName = "element"
	elementHead = '<element '
	elementStyle = 'style="'
	elementHeight = ""
	elementWidth = ""
	elementScript = "<script> "
	elementContent = ""
	styleClass = 'class="'
	
	block init()
		elementHead = '<'+elementName+' '
	
	block addHTML(inelement)
		elementContent += "\t\t"+inelement + crlf
	
	block setPostion(pos)
		elementStyle += 'position:'+pos+';'
		
	block setBottom(px)
		elementStyle += 'bottom:'+px+';'
		
	block setTop(px)
		elementStyle += 'top:'+px+';'
		
	block setLeft(px)
		elementStyle += 'left:'+px+';'
		
	block setRight(px)
		elementStyle += 'right:'+px+';'
	
	block setBackground(icolor)
		elementStyle += 'background:'+icolor+';'
		
	block setTextColor(icolor)
		elementStyle += 'color:'+icolor+';'
		
	block setHeight(height)
		setSize(height, elementWidth)
		
	block getHeight()
		return elementHeight
	
	block setWidth(width)
		setSize(elementHeight, width)
		
	block getWidth()
		return elementWidth
		
	block addStyleClass(iStyleClass)
		styleClass += ' '+iStyleClass
		
	block setStyleClass(iStyleClass)
		styleClass += iStyleClass
		
	block toString()
		finalDiv = '\t\t'+elementHead + elementStyle+'" '+styleClass+'" > '+elementContent+'</'+elementName+'>'
		return finalDiv